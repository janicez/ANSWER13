<?xml version="1.0"?>

<PropertyList>

 <path>pilots.ac</path> 

    <!--Cockpit Shader-->
    <effect>
        <inherits-from>Aircraft/ASK21/Models/Effects/interior-shadow</inherits-from>
        <object-name>pilot</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/ASK21/Models/Effects/interior-shadow-back</inherits-from>
        <object-name>copilot</object-name>
    </effect>
    
    <animation>
        <type>select</type>
        <condition>
            <property>/sim/model/pilots-enabled</property>
            <not-equals>
                <property>/sim/current-view/view-number</property>
                <value>0</value>
            </not-equals>
        </condition>
        <object-name>pilot</object-name>
    </animation>
    <animation>
        <type>select</type>
        <condition>
            <property>/sim/model/pilots-enabled</property>
            <not-equals>
                <property>/sim/current-view/view-number</property>
                <value>8</value>
            </not-equals>
        </condition>
        <object-name>copilot</object-name>
    </animation>
</PropertyList>